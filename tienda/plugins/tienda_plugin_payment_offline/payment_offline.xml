					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field name="enable_other" type="radio" default="1" label="PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_ACCEPT_OTHER" description="PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_ACCEPT_OTHER_DESC">
					<option value="0">COM_TIENDA_NO</option>
					<option value="1">COM_TIENDA_YES</option>
				</field>
				<field name="articleid" type="text" size="10" default="" label="PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_ARTICLE_NUMBER" description="PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_ARTICLE_NUMBER_DESC"/>
