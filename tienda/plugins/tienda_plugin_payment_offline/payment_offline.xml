					<option value="moneyorder">PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_PAYMENT_MONEYORDER</option>
					<option value="cash">PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_PAYMENT_CASH</option>
					<option value="wire">PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_PAYMENT_WIRE</option>
					<option value="invoice">PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_PAYMENT_INVOICE</option>
					<option value="other">PLG_TIENDA_PAYMENT_OFFLINE_OFFLINE_PAYMENT_OTHER</option>
				</field>
			</fieldset>
		</fields>
