<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tienda Plugin for sending products to Google Products</name>
	<version>0.9.0</version>
	<creationDate>October 2011</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_TIENDA_GOOGLEPRODUCTS_PLUGINDESC</description>
	
	<files>
		<filename plugin="googleproducts">googleproducts.php</filename>
        <folder>googleproducts</folder>
	</files>
    
    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_tienda_googleproducts.ini</language>
    </languages>
    
	<params>
		<param type="text" name="username" label="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_USERNAME" description="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_USERNAME_DESC" default="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_USERNAME_DEFAULT" />
		<param type="text" name="password" label="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_PASSWORD" description="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_PASSWORD_DESC" default="PLG_TIENDA_GOOGLEPRODUCTS_GOOGLE_ACCOUNT_PASSWORD_DEFAULT" />
		<param type="text" name="account_id" label="PLG_TIENDA_GOOGLEPRODUCTS_ACCOUNT_ID" description="The Google Products Account ID" default="PLG_TIENDA_GOOGLEPRODUCTS_ACCOUNT_ID_DEFAULT" />
		<param name="taxonomy" type="radio" default="PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_SYSTEM_DEFAULT" label="PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_SYSTEM" description="PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_SYSTEM_DESCR">
		  <option value="tienda">PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_DEFAULT_TIENDA</option>
		  <option value="google">PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_DEFAULT_GOOGLE</option>
		  <option value="both">PLG_TIENDA_GOOGLEPRODUCTS_TAXONOMY_DEFAULT_BOTH</option>
		</param>
		<param name="auto_sync" type="radio" default="1" label="PLG_TIENDA_GOOGLEPRODUCTS_ENABLE_AUTOMATIC_SENDING" description="PLG_TIENDA_GOOGLEPRODUCTS_ENABLE_AUTOMATIC_SENDING_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
	</params>
			
</install>