<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
	<name>Tienda - Product Content Plugin</name>
	<version>0.9.0</version>
	<creationDate>October 2011</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_TIENDA_CONTENT_PRODUCT_CONTENT_PRODUCT_PLUGINDESC</description>
	
	<files>
		<filename plugin="tienda_content_product">tienda_content_product.php</filename>
        <folder>tienda_content_product</folder>
	</files>

    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_content_tienda_content_product.ini</language>
    </languages>

	<params>
		<param name="quantity_restriction" type="radio" default="0" label="PLG_TIENDA_CONTENT_PRODUCT_QUANTITY_RESTRICTION" description="PLG_TIENDA_CONTENT_PRODUCT_QUANTITY_RESTRICTION_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_description" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_DESCRIPTION" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_DESCRIPTION_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_name" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_NAME" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_NAME_DESCR">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_model" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_MODEL" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_MODEL_DESCR">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_sku" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_SKU" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_SKU_DESCR">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_image" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_IMAGE" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_IMAGE_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_price" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_PRICE" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_PRICE_DESCR">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_buy" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_BUY_FORM" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_BUY_FORM_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_children" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_CHILDREN" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_CHILDREN_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_files" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_FILES" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_FILES_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_relations" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_RELATIONS" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_RELATIONS_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="show_requirements" type="radio" default="1" label="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_REQUIREMENT" description="PLG_TIENDA_CONTENT_PRODUCT_SHOW_PRODUCT_REQUIREMENT_DESC">
		  <option value="0">COM_TIENDA_NO</option>
		  <option value="1">COM_TIENDA_YES</option>
		</param>
		<param name="layout" type="list" default="view" label="PLG_TIENDA_CONTENT_PRODUCT_LAYOUT" description="PLG_TIENDA_CONTENT_PRODUCT_LAYOUT_DESC">
		  <option value="view">PLG_TIENDA_CONTENT_PRODUCT_COMPLETE_VIEW</option>
		  <option value="product_children">PLG_TIENDA_CONTENT_PRODUCT_CHILDREN_PRODUCTS</option>
		  <option value="product_files">PLG_TIENDA_CONTENT_PRODUCT_PRODUCT_FILES</option>
		  <option value="product_relations">PLG_TIENDA_CONTENT_PRODUCT_PRODUCT_RELATIONS</option>
		  <option value="product_requirements">PLG_TIENDA_CONTENT_PRODUCT_PRODUCT_REQUIREMENTS</option>
		  <option value="product_buy">PLG_TIENDA_CONTENT_PRODUCT_PRODUCT_BUY</option>
		</param>
	</params>
			
</install>