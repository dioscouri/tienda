<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">
    <name>Search - Tienda</name>
    <version>0.8.0</version>
    <creationDate>August 2011</creationDate>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2011 Dioscouri.com</copyright>
    <license>GNU General Public License v2</license>
    <description>Enables searching Tienda products and categories in core search component</description>

	<files>
		<filename plugin="tienda">tienda.php</filename>
	</files>
	
    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_search_tienda.ini</language>
    </languages>
	
	<params>
        <param name="title" type="text" size="50" default="Tienda" label="Search Category Title" description="Search Category Title"/>
		<param name="density_flag" type="radio" default="1" label="Keyword density" description="Enables results based on keyword density (overrides Joomla sort).">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="link_behaviour" type="radio" default="1" label="Link Behaviour" description="Link Behaviour Desc">
			<option value="0">Open in the Same Tab</option>
			<option value="1">Open in a New Tab</option>
		</param>
	</params>
</install>