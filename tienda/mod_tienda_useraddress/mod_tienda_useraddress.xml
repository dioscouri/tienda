<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="tienda_user_main" client="administrator" method="upgrade">
    <name>User Addresses</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.5.5</version>
    <creationDate>August 2010</creationDate>
    <copyright>2010 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Displays addresses in the user dashboard</description>
    
    <files>
        <filename module="mod_tienda_useraddress">mod_tienda_useraddress.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_tienda_useraddress.ini</language>
	</languages>
	
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param type="spacer" />
		<param name="display_null" type="radio" default="1" label="Display No Addresses" description="Display No Addresses Desc">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>
		<param name="null_text" type="text" size="50" default="No Addresses Set" label="No Addresses Set" description="No Addresses Text Desc"></param>
    </params>
</install>