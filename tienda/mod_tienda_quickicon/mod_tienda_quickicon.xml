<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="icon" client="administrator" method="upgrade">
    <name>Tienda Quick Icon</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.5.5</version>
    <creationDate>August 2010</creationDate>
    <copyright>2010 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Displays a link to Tienda in the joomla dashboard</description>
    
    <files>
        <filename module="mod_tienda_quickicon">mod_tienda_quickicon.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_tienda_quickicon.ini</language>
	</languages>
	
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param type="spacer" />
		<param name="text" type="text" size="50" default="Tienda Dashboard" label="Text link" description="Text of the link in the dashboard"></param>
    </params>
</install>