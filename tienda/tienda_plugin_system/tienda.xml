<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
    <name>System - Tienda</name>
    <version>0.9.0</version>
    <creationDate>October 2011</creationDate>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2012 Dioscouri.com</copyright>
    <license>GNU General Public License v2</license>
    <description>Handles system events and overrides for Tienda</description>
    
    <files>
        <filename plugin="tienda">tienda.php</filename>
        <folder>tienda</folder>
    </files>
    
    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_system_tienda.ini</language>
    </languages>
    
    <params>
        <param name="disable_error_reporting" type="radio" default="0" label="COM_TIENDA_DISABLE_ERROR_REPORTING" description="COM_TIENDA_DISABLE_ERROR_REPORTING_DESC">
          <option value="0">COM_TIENDA_NO</option>
          <option value="1">COM_TIENDA_YES</option>
        </param>
        <param name="site_override_user" type="radio" default="0" label="COM_TIENDA_OVERRIDE_SITE_USER" description="COM_TIENDA_OVERRIDE_SITE_USER_DESC">
          <option value="0">COM_TIENDA_NO</option>
          <option value="1">COM_TIENDA_YES</option>
        </param>
    </params>       
</install>