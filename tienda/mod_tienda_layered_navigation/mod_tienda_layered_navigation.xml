<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="left" method="upgrade">
    <name>Layered Navigation</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.8.0</version>
    <creationDate>August 2011</creationDate>
    <copyright>2011 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Layered navigation that allow users to filter products by any parameter they want</description>
    
    <files>
        <filename module="mod_tienda_layered_navigation">mod_tienda_layered_navigation.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>includes</folder>
    </files>
    
    <languages>
		<language tag="en-GB">languages/en-GB.mod_tienda_layered_navigation.ini</language>
	</languages>
	
    <params>   
		<param name="multi_mode" type="list" default="1" label="MULTI MODE" description="MULTI MODE DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="filter_category" type="list" default="1" label="FILTER BY CATEGORY" description="FILTER BY CATEGORY DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>	
		<param name="roottext" size="35" type="text" default="" label="TEXT FOR ROOT CATEGORY" description="TEXT FOR ROOT CATEGORY DESC" />	
		<param name="filter_manufacturer" type="list" default="1" label="FILTER BY MANUFACTURER" description="FILTER BY MANUFACTURER">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		
		<param name="filter_rating" type="list" default="1" label="FILTER BY RATING" description="FILTER BY RATING DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="filter_attributes" type="list" default="1" label="FILTER BY ATTRIBUTES" description="FILTER BY ATTRIBUTES DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="excluded_attributes" size="35" type="text" default="" label="EXCLUDED ATTRIBUTES" description="EXCLUDED ATTRIBUTES DESC" />	
		<param name="filter_price" type="list" default="1" label="FILTER BY PRICE" description="FILTER BY PRICE DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>	
		<param name="auto_price_range" type="list" default="1" label="AUTOMATIC PRICE RANGE" description="AUTOMATIC PRICE RANGE DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="price_range_set" size="50" type="text" default="" label="PRICE RANGE INCREMENTS" description="PRICE RANGE INCREMENTS DESC" />		
	</params>    
    <params group="advanced">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
</install>